@model Shop1.Models.ViewModel.ProductAddViewModel
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Add Product</h1>

<form action="/product" method="post" enctype="multipart/form-data">
    <div asp-validation-summary="All"></div>

    <div class="form-group">
        <label for="exampleInputEmail1">Name</label>
        <input asp-for="@Model.Name" class="form-control" placeholder="Enter Name">
        <span asp-validation-for="@Model.Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Description</label>
        <input asp-for="@Model.Description" class="form-control" placeholder="Enter Description">
        <span asp-validation-for="@Model.Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">Price</label>
        <span asp-validation-for="@Model.Price" class="text-danger"></span>
        <input asp-for="@Model.Price" class="form-control" placeholder="Enter price">

    </div>
    <div class="form-group">
        <label for="exampleInputEmail1">File</label>
        <input asp-for="@Model.Image" class="form-control">
        <span asp-validation-for="@Model.Image" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
